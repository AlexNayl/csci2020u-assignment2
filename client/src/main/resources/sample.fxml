<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="IP:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="ipField" text="127.0.0.1" promptText="IP ADRESS" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Port:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="portField" text="556" promptText="PORT" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Connect" onAction="#handleConnectButton" GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
</GridPane>